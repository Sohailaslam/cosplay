<div class="container  bg-white border my-5">
  <div class="row mt-4">
    <div class="col-md-10 col-6">
      <h3 class="text-center text-dark text-uppercase"><strong><%= @costume.name %></strong></h3>
    </div>
    <div class="col-md-2 col-6 text-right">
      <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#exampleModal">
        Add New Image
      </button>
    </div>
  </div>

  <div class="row mt-5">
      <div class="col-md-6">
        <h4><strong>Description: </strong> <span class="h5"><%= @costume.desc %></span></h4>
      </div>
  </div>

  <!-- <h4><strong>Images:</strong></h4> -->
  <div class="row mt-5">
      <% if @costume.images.attached? %>
        <% @costume.images.each do |image| %>
        <div class="col-md-4 mt-3">
            <%= image_tag(image, :class => 'img-fluid h-auto' )  %>
            <h6 class="text-center mt-1">1 September 2020</h6>
        </div>
          <% end %>
      <% end %>
  </div>
  <div class="row text-center my-4">
    <div class="col-12">

      <%= link_to 'Edit', edit_costume_path(@costume, :class => 'btn btn-primary btn-sm text-light') if can? :update, @costume %> |
      <%= link_to 'Back', costumes_path, :class => 'btn btn-info btn-sm text-light' %>
    </div>

  </div>

</div>








